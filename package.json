{
  "name": "build_test",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "env-cmd -f ./env/.env.local next dev",
    "dev:docker": "docker-compose --env-file ./env/.env.local up --build",
    "down:local": "docker-compose --env-file ./env/.env.local down -v",
    "build": "next build",
    "build:dev": "env-cmd -f ./env/.env.dev next build",
    "build:prod": "env-cmd -f ./env/.env.production next build",
    "build:stg": "env-cmd -f ./env/.env.stg next build",
    "prestart": "npm run build:prod",
    "start": "pm2 list && pm2-runtime start ecosystem.config.js",
    "start:dev": "env-cmd -f ./env/.env.dev next start",
    "start:stg": "env-cmd -f ./env/.env.stg next start",
    "start:prod": "env-cmd -f ./env/.env.production next start",
    "lint": "next lint",
    "deploy:main": "npm run build:prod && npm run start:prod",
    "deploy:dev": "npm run build:dev && npm run start:dev",
    "deploy:stg": "npm run build:stg && npm run start:stg",
    "deploy:local": "env-cmd -f ./env/.env.local next dev"
  },
  "dependencies": {
    "@sentry/nextjs": "^9.2.0",
    "@tanstack/react-query": "^5.66.9",
    "@tanstack/react-query-devtools": "^5.66.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.9",
    "axios": "^1.7.9",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "env-cmd": "^10.1.0",
    "fs": "^0.0.1-security",
    "i18next": "^24.2.2",
    "i18next-browser-languagedetector": "^8.0.4",
    "i18next-resources-to-backend": "^1.2.1",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "next": "^14.2.24",
    "next-i18next": "^15.4.2",
    "react": "^18",
    "react-dom": "^18",
    "react-i18next": "^15.4.1",
    "tailwind-merge": "^3.0.2",
    "winston": "^3.17.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
